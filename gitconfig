[color]
  ui = true
  branch = true
  diff = true
  interactive = true
  status = true
[color "status"]
  added = green
  changed = red
  deleted = red
  untracked = yellow
[user]
	name = rinti
	email = andreas.bernacca@frojd.se
[push]
	default = simple
[core]
	pager = diff-so-fancy | less --tabs=4 -RFX
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[alias]
  dsf = "!f() { [ \"$GIT_PREFIX\" != \"\" ] && cd "$GIT_PREFIX"; git diff --color $@ | diff-so-fancy | less --tabs=4 -RFX; }; f"
[color "diff"]
	meta = yellow
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
